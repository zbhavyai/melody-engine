root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
indent_size = 4
max_line_length = 120

[*.sql]
indent_size = 4

[*.xml]
indent_size = 2

[*.{yaml,yml}]
indent_size = 2

[*.{html,css}]
indent_size = 2
max_line_length = 120

[*.{js,jsx}]
indent_size = 2
max_line_length = 120

[*.{json,jsonc}]
max_line_length = 120

[*.md]
indent_size = 3
max_line_length = off

[*.sh]
indent_size = 4
max_line_length = off

[Makefile]
indent_size = 4
indent_style = tab
max_line_length = off
